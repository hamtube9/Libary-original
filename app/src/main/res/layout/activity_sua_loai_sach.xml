<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SuaLoaiSachActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Sửa loại sách"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/libary"/>

    <EditText
        android:id="@+id/edtSuaIDLS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:hint="Ma Loai Sach" />





    <EditText
        android:id="@+id/edtSuaNameLoaiSach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:hint="Name" />




    <EditText
        android:id="@+id/edtSuaTacGiaLS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:hint="TacGia" />


    <EditText
        android:id="@+id/edtSuaPosLS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:inputType="number"
        android:imeOptions="actionDone"
        android:hint="Vi tri" />




    <Button
        android:id="@+id/btnSuaTypeBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Them" />


</LinearLayout>
<ImageView
    android:id="@+id/imgThemAnhSach"
    android:layout_marginTop="10dp"
    android:layout_width="110dp"
    android:layout_height="130dp"
    android:src="@drawable/sach"
    android:layout_gravity="center_horizontal"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Ten Sach"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"/>

        <EditText
            android:id="@+id/edtThemTenSach"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Ma Sach"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"/>

        <EditText
            android:id="@+id/edtThemMaSach"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Gia"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"/>

        <EditText
            android:id="@+id/edtThemGiaSach"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="So Luong"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"/>

        <EditText
            android:id="@+id/edtThemSoLuongSach"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnThemSach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>